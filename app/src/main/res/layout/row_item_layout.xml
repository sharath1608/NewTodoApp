<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/todo_item"
    android:orientation="horizontal" android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <CheckBox
        android:id="@+id/todo_check"
        android:gravity="center_vertical"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
    <EditText
        android:hint="@string/todo_item_hint"
        style="@style/detailTextTheme"
        android:id="@+id/todo_text"
        android:layout_width="wrap_content"
        android:background="@android:color/transparent"
        android:layout_marginEnd="60dp"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_toEndOf="@+id/todo_check" />
    <ImageView
        android:contentDescription="@string/delete_image_description"
        android:id="@+id/delete_item"
        android:layout_marginStart="280dp"
        android:layout_alignTop="@id/todo_text"
        android:visibility="invisible"
        android:src="@drawable/ic_delete_black_18dp"
        android:layout_width="@dimen/icon_detail_size"
        android:layout_height="@dimen/icon_detail_size" />
</RelativeLayout>