<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="android:statusBarColor">@color/status_bar_color</item>
        <item name="android:actionBarStyle">@style/customActionBarStyle</item>
    </style>

    <style name="customActionBarStyle" parent="Widget.AppCompat.ActionBar.Solid">
        <item name="android:background">@color/appbar_color</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />
    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <style name="cardTitleTheme">
        <item name="android:textColor">@color/vanilla_white</item>
        <item name="android:background">@color/header_background_normal</item>
        <item name="android:fontFamily">sans-serif-light</item>
        <item name="android:textSize">20sp</item>
    </style>

    <style name="emptyListTheme">
        <item name="android:textColor">@color/status_bar_color</item>
        <item name="android:fontFamily">sans-serif-normal</item>
        <item name="android:textSize">20sp</item>
    </style>

    <style name="dateLocTheme">
        <item name="android:textColor">@color/primary_dark_material_dark</item>
        <item name="android:background">@android:color/transparent</item>
        <item name="android:fontFamily">sans-serif-light</item>
        <item name="android:textSize">13sp</item>
    </style>
    <style name="itemsTheme">
        <item name="android:textColor">@color/primary_dark_material_dark</item>
        <item name="android:background">@color/vanilla_white</item>
        <item name="android:fontFamily">sans-serif-normal</item>
        <item name="android:textSize">13sp</item>
    </style>
    <style name="detailTextTheme">
        <item name="android:background">@android:color/transparent</item>
        <item name="android:textColor">@color/primary_dark_material_dark</item>
        <item name="android:fontFamily">sans-serif-normal</item>
        <item name="android:textSize">16sp</item>
    </style>

    <style name="Theme.AppCompat.Translucent" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:statusBarColor">@color/status_bar_color</item>
        <item name="android:windowActionBar">false</item>
        <item name="android:colorBackgroundCacheHint">@null</item>
        <item name="android:windowIsTranslucent">true</item>
        <item name="android:windowAnimationStyle">@android:style/Animation</item>
    </style>
</resources>
